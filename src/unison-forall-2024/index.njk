        <div class="schedule">
          <h2>Schedule</h2>

          <div class="schedule-table">
            {%- for event in conf2024.events %}
            {% if event.speaker %}
            <div class="card schedule-slot">
            {% else %}
            <div class="card schedule-slot break">
            {% endif %}
              <div class="schedule-time-range">
                <span class="schedule-time">{{event.start}}</span>
                <span class="schedule-time-separator">-</span>
                <span class="schedule-time">{{event.end}}</span>
              </div>
              <div class="schedule-description">
                <h3>{{event.title}}</h3>
                {% if event.details %}
                <div>{{ event.details | markdown | safe }}</div>
                {% endif %}
              </div>
              {% if event.speaker %}
              <div class="schedule-speaker">
                <div class="speaker-photo" style="background-image: url({{event.speakerPhotoUrl}})"></div>
